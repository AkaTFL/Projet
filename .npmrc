# Utiliser uniquement le registre officiel npm (tu peux adapter à un registry privé si tu en as un)
registry=https://registry.npmjs.org/

# Ne pas exécuter automatiquement les scripts lifecycle (postinstall, preinstall, etc.)
ignore-scripts=true

# Toujours vérifier l'intégrité des paquets (hash)
prefer-online=true

# Ne pas autoriser l'installation de paquets en mode "force" (empêche override)
force=false

# Désactiver l'installation automatique des dépendances optionnelles (qui peuvent être malveillantes)
optional=false

# Toujours utiliser le cache local pour éviter les paquets modifiés en ligne entre deux install
prefer-offline=true

# Empêcher les versions avec tag "latest" non figées (force utilisation de versions exactes)
save-exact=true

# Activer l'audit automatique après installation (pour détecter vulnérabilités)
audit=true

# Ne pas permettre l'installation de paquets avec des dépendances peer non résolues (évite conflits)
strict-peer-dependencies=true
